@model List<Meals>

<div class="container">
    <div class="row ">
        <div class="card bg-primary-subtle">
            <div class="card-header bg-primary">
                <div class="d-flex justify-content-between">
                    <h1>Planned Meals</h1>
                    <button class="btn btn-secondary">Filter [s]</button>
                </div>
            </div>
            <div class="card-body">
                
                @if(Model.Count == 0)
                {
                    <p>You Have no Meals Saved. Get Started Here! -> <a asp-action="Create" class="btn btn-primary">Add [+]</a></p>
                } else
                {
                    <p> Need a new type of Meal? -> <a asp-action="Create" class="btn btn-primary">Add [+]</a></p>
                    // add list item here once there is an item

                    <h1> WIP not added yet</h1>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-end align-items-center mb-3">
            <a class="btn btn-primary">See Graph [->]</a>
        </div>
    </div>
</div>